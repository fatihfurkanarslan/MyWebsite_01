@using MyWebsite_01.Areas.Admin.Models.DTO
@model BlogPostVM


@{
    ViewBag.Title = "AddBlogPost";
    Layout = "~/Areas/Shared/AdminLayout.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Kategori Ekle
        </h1>

    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- left column -->
            <div class="col-md-6">

                @if (ViewBag.IslemDurumu == 1)
                {
                    <div class="alert alert-success alert-dismissible">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                        <h4><i class="icon fa fa-check"></i> Başarılı!</h4>
                        Kayıt Başarılı..
                    </div>
                }
                else if (ViewBag.IslemDurumu == 0)
                {
                    <div class="alert alert-danger alert-dismissible">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                        <h4><i class="icon fa fa-ban"></i> Dikkat!</h4>
                        Başarısız kayıt girişimi..
                    </div>
                }



                @Html.BeginForm("AddBlogPost", "BlogPost"){

                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Post Ekle</h3>
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    <form role="form">
                        <div class="box-body">

                            <div class="form-group">
                                @Html.DropDownListFor(x => x.CategoryId, Model.drpCategories,"Kategori Liste", new { @class = "form-control", name="CategoryId" })

                            </div>

                            <div class="form-group">
                                @Html.Label("Blog Adı")
                        @Html.TextBoxFor(x => x.Title, new { @class = "form-control", @placeholder = "BlogPostu Ekle" })
                        @Html.ValidationMessageFor(x => x.Title)

                        </div>

                        <div class="form-group">
                            @Html.Label("Kategoriye İçerik Ekle")
                        @Html.TextBoxFor(x => x.Content, new { @class = "form-control", @placeholder = "İçerik Ekle" })
                        @Html.ValidationMessageFor(x => x.Content)

                        </div>


                        </div>
                        <!-- /.box-body -->
                        <div class="box-footer">
                            <button type="submit" class="btn btn-primary">Kayıt</button>
                        </div>
                    </form>
                </div>

                }



            </div>

        </div>

    </section>
    <!-- /.content -->
</div>
<!-- /.conte